<h1><%= @cocktail.name %></h1>

<% if @cocktail.photo.attached? %>
    <%= cl_image_tag @cocktail.photo.key, width: 600 %>
<% else %>
    <%= image_tag Cocktail::DEFAULT_IMAGE_URL , alt: @cocktail.name, width: 600 %>
<% end %>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li>
      <%= dose.description %>
      <%= dose.ingredient.name %>
      <%= link_to 'X', dose_path(dose.id), method: :delete %>
    </li>
  <% end %>
</ul>

<%= link_to 'Add ingredient', new_cocktail_dose_path(@cocktail), class: "btn btn-outline-success" %> <br>
<%= link_to 'Back', cocktails_path, class: "btn btn-outline-success" %>
